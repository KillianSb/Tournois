<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Tournaments Master{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}


        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://flowbite.com/docs/flowbite.min.js"></script>
            <script src="https://flowbite.com/docs/datepicker.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/datepicker.min.js"></script>
        {% endblock %}
    </head>

    <body>
    <header>

        <div class="navbar bg-base-100">
            <div class="flex-1">
                <a class="btn btn-ghost normal-case text-xl" href="{{ path('public_home') }}">Tournaments Master</a>
            </div>
            <div class="flex-none">
                <ul class="menu menu-horizontal px-1">
                    {% if not app.user %}
                        <li><a href="{{ path('security_login') }}">Connexion</a></li>
                    {% endif %}
                    {% if app.user %}
                        <li><a href="{{ path('profil_infos') }}">{{ app.user.username }}</a></li>
                    {% endif %}
                    <li>
                        <details>
                            <summary>
                                Menu
                            </summary>
                            <ul class="p-2 bg-base-100">
                                {% if app.user %}
                                    <li><a href="{{ path('profil_infos') }}">Profil</a></li>
                                {% endif %}
                                <li><a href="{{ path('tournois_home') }}">Tournois</a></li>
                                <li><a href="{{ path('video_game_index') }}">Jeux</a></li>
                                <li><a href="{{ path('_liste') }}">Equipes</a></li>
                                {% if app.user %}
                                    <li><a href="{{ path('security_logout') }}">Déconnexion</a></li>
                                {% endif %}
                            </ul>
                        </details>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <main>
        {% block body %}

            {% block profil %}
            {% endblock %}

        {% endblock %}
    </main>
    <footer class="footer footer-center p-10 bg-base-200 text-base-content rounded">
        <div class="grid grid-flow-col gap-4">
            <a class="link link-hover">About us</a>
            <a class="link link-hover">Contact</a>
            <a class="link link-hover">Jobs</a>
            <a class="link link-hover">Press kit</a>
        </div>
        <div>
            <div class="grid grid-flow-col gap-4">
