                                {{ form_label(registrationForm.phone_number) }}
                                {{ form_widget(registrationForm.phone_number) }}
                                {{ form_errors(registrationForm.phone_number) }}
                            </label>
                        </div>
                    </div>

                    <div class="form-control">
                        <div class="form-control w-54">
                            <label class="infos-register label flex justify-center flex-col">
                                {{ form_label(registrationForm.plainPassword) }}
                                {{ form_widget(registrationForm.plainPassword) }}
                                {{ form_errors(registrationForm.plainPassword) }}
                            </label>
                        </div>
                    </div>

                    <div class="form-control ">
                        <div class="form-control w-54">
                            <label class="infos-register label flex justify-center">
                                <span class="text-gold label-text m-3">Accepter les conditions</span>
                                <input type="checkbox" class="toggle toggle-accent toggle-sm" required />
                            </label>
                        </div>
                    </div>

                    <div class="form-control">
                        {{ form_row(registrationForm.captcha) }}
                    </div>
                    <div class="form-control mt-6 ">
