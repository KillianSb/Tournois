{% extends 'base.html.twig' %}

{% block title %}Tournament{% endblock %}

{% block body %}
    <div class="container flex justify-center mx-auto">
        <h1 class="text-5xl font-bold text-gold">Tournois</h1>
    </div>

    <table class="table text-gold">
        <tbody>
            <tr>
                <th>Nom du tournois</th>
                <td>{{ tournament.name }}</td>
            </tr>
            <tr>
                <th>R√®gles</th>
                <td>{{ tournament.rules }}</td>
            </tr>
            <tr>
                <th>Date de d√©but du tournois</th>
                <td>{{ tournament.dateBeginTournament ? tournament.dateBeginTournament|date('d F Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date de cr√©ation</th>
                <td>{{ tournament.dateCreation ? tournament.dateCreation|date('d F Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ tournament.dateEndTournament ? tournament.dateEndTournament|date('d F Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Date limite d'inscription</th>
                <td>{{ tournament.dateLimitRegistration ? tournament.dateLimitRegistration|date('d F Y H:i') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre d'√©quipe maximum</th>
                <td>{{ tournament.nbTeamMax }}</td>
            </tr>
            <tr>
                <th>Informations du tournois</th>
                <td>{{ tournament.tournamentInfo }}</td>
            </tr>
            <tr>
                <th>Prix d'entr√©e</th>
                <td>{{ tournament.entryPrice }}‚Ç¨</td>
            </tr>
            <tr>
                <th>R√©compense ü§ë</th>
                <td>{{ tournament.reward }}‚Ç¨</td>
            </tr>
        </tbody>
    </table>

    <div class="text-gold">
        {% for equipe in teams %}
            {{ equipe.name }}
        {% endfor %}
    </div>

    <a class="text-gold" href="{{ path('tournois_home') }}">Retour au tournois</a>

    <a class="text-gold" href="{{ path('tournois_modifier', {'id': tournament.id}) }}">Modifier</a>

    <a class="text-gold" href="{{ path('tournois_join', {'id': tournament.id}) }}">Rejoindre</a>

    {{ include('tournament/supprimer.html.twig') }}

    <!-- Gestion des parties -->
    <div class="container flex justify-center mx-auto">
        <h1 class="text-5xl font-bold text-gold">Inscrivez votre victoire !</h1>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}


    <!-- Tableau du tournois -->
    <div class="container flex justify-center mx-auto">
        <h1 class="text-5xl font-bold text-gold">Tableau du tournois</h1>
    </div>

    {% if tournament.status == 'open' %}
        <div class="arbres">
            <div id="arbre1">
                <div class="round1">
                    {% for team in teams %}
                        <div class="equipeShuffled" id="equipe{{ loop.index }}">
                            <div class="text-gold">
                                <span id="equipeGagnante" class="mask mask-squircle w-12 h-12"><img src="{{ asset(team.picture) }}" alt="{{ team }}"/></span>{{ team }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="round2">
                <div class="equipe">
                    <div class="text-gold mb-10"><span></span></div>
                    <div class="text-gold mb-52"><span></span></div>
                </div>
                <div class="equipe">
                    <div class="text-gold mb-10"><span class="mask mask-squircle w-12 h-12"><img src="" alt=""/></span></div>
                    <div class="text-gold"><span class="mask mask-squircle w-12 h-12"><img src="" alt=""/></span></div>
                </div>
            </div>
            <div class="round3">
                <div class="finaliste">
                    <div class="text-gold mb-52"><span class="mask mask-squircle w-12 h-12"><img src="" alt=""/></span></div>
                </div>
                <div class="finaliste">
                    <div class="text-gold"><span class="mask mask-squircle w-12 h-12"><img src="" alt=""/></span></div>
                </div>
            </div>

            <div class="round4">
                <div class="gagnant">
                    <div class="text-gold"><span class="mask mask-squircle w-12 h-12"><img src="" alt=""/></span></div>
                </div>
            </div>
        </div>
    {% endif %}
    <br>

