{% extends 'base.html.twig' %}

{% block title %}Équipe{% endblock %}

{% block body %}
    <h1>Équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de l'équipe</th>
                <td>{{ equipe.name }}</td>
            </tr>
            <tr>
                <th>Nombre de joueurs</th>
                <td>{{ equipe.nbPlayer }}</td>
            </tr>
            <tr>
                <th>Bio de l'équipe</th>
                <td>{{ equipe.bio }}</td>
            </tr>
            <tr>
                <th>Liste des joueurs</th>
                <td>
                {% for user in equipe.user %}
                    {{ user.username }}
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('_liste') }}">back to list</a>

    <a href="{{ path('_modification', {'id': equipe.id}) }}">edit</a>

    {{ include('equipe/_delete_form.html.twig') }}

{% endblock %}
