{% extends 'base.html.twig' %}

{% block title %}{{ team.name }}{% endblock %}

{% block body %}
    <h1>Équipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de l'équipe</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Nombre de joueurs</th>
                <td>{{ team.nbPlayer }}</td>
            </tr>
            <tr>
                <th>Bio de l'équipe</th>
                <td>{{ team.bio }}</td>
            </tr>
            <tr>
                <th>Liste des joueurs : </th>
                <td>
                    {% for user in team.user %}
                        {{ user.username }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('_liste') }}">back to list</a>

    <a href="{{ path('_modification', {'id': team.id}) }}">edit</a>

    <a href="{{ path('rejoindre', {'id': team.id}) }}">Rejoindre</a>

    {{ include('equipe/_delete_form.html.twig') }}

{% endblock %}
